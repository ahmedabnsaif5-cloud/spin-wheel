    <div class="container">
        <div class="wheel-wrapper">
            <h1 class="title">ÿπÿ¨ŸÑÿ© ÿßŸÑÿ≠ÿ∏</h1>
            <div class="arrow"></div>
            <div class="wheel-container">
                <canvas id="wheel" width="500" height="500"></canvas>
            </div>
        </div>
        
        <div id="result" class="result"></div>
        <button id="claimBtn" class="claim-button" style="display: none;">ÿßÿ∂ÿ∫ÿ∑ ŸáŸÜÿß ŸÑŸÑÿßÿ≥ÿ™ŸÑÿßŸÖ üéÅ</button>
    </div>
    
    <script>
        const wheel = document.getElementById('wheel');
        const resultDiv = document.getElementById('result');
        const claimBtn = document.getElementById('claimBtn');
        const ctx = wheel.getContext('2d');

        const prizes = [
            { text: '35GB\\nFREE', color: '#FFA500' },
            { text: 'LOSE', color: '#8B0000' },
            { text: '10GB\\nFREE', color: '#FFA500' },
            { text: 'LOSE', color: '#8B0000' },
            { text: '35GB\\nFREE', color: '#FFA500' },
            { text: 'LOSE', color: '#8B0000' },
            { text: '10GB\\nFREE', color: '#FFA500' },
            { text: 'LOSE', color: '#8B0000' }
        ];

        const numPrizes = prizes.length;
        const arcSize = (2 * Math.PI) / numPrizes;
        let currentRotation = 0;
        let isSpinning = false;
        let ledOffset = 0;
        let winningPrizeIndex = null;
        let spinCount = 0;
        const maxSpins = 3;

        function drawWheel(winningIndex = null) {
            const centerX = wheel.width / 2;
            const centerY = wheel.height / 2;
            const radius = wheel.width / 2 - 60;
            
            ctx.clearRect(0, 0, wheel.width, wheel.height);
            
            for (let i = 0; i < numPrizes; i++) {
                const angle = i * arcSize;
                
                ctx.beginPath();
                ctx.fillStyle = prizes[i].color;
                ctx.moveTo(centerX, centerY);
                ctx.arc(centerX, centerY, radius, angle, angle + arcSize);
                ctx.lineTo(centerX, centerY);
                ctx.fill();
                
                ctx.strokeStyle = '#FFD700';
                ctx.lineWidth = 3;
                ctx.stroke();
                
                ctx.save();
                ctx.translate(centerX, centerY);
                ctx.rotate(angle + arcSize / 2);
                ctx.textAlign = 'center';
                ctx.fillStyle = prizes[i].color === '#FFA500' ? '#8B0000' : '#FFD700';
                ctx.font = 'bold 28px Arial';
                
                if (prizes[i].text === 'LOSE') {
                    ctx.fillText('LOSE', radius * 0.65, 7);
                } else {
                    const lines = prizes[i].text.split('\\n');
                    ctx.fillText(lines[0], radius * 0.65, -5);
                    ctx.font = 'bold 22px Arial';
                    ctx.fillText(lines[1], radius * 0.65, 20);
                }
                ctx.restore();
            }
            
            ctx.beginPath();
            ctx.arc(centerX, centerY, radius + 20, 0, 2 * Math.PI);
            ctx.strokeStyle = '#FFD700';
            ctx.lineWidth = 40;
            ctx.stroke();
            
            const numLeds = 20;
            for (let i = 0; i < numLeds; i++) {
                const angle = (i / numLeds) * 2 * Math.PI + ledOffset;
                const x = centerX + Math.cos(angle) * (radius + 20);
                const y = centerY + Math.sin(angle) * (radius + 20);
                
                const gradient = ctx.createRadialGradient(x, y, 0, x, y, 12);
                gradient.addColorStop(0, '#FFFFFF');
                gradient.addColorStop(0.5, '#FFFF99');
                gradient.addColorStop(1, 'rgba(255, 255, 255, 0)');
                
                ctx.beginPath();
                ctx.arc(x, y, 12, 0, 2 * Math.PI);
                ctx.fillStyle = gradient;
                ctx.fill();
                
                ctx.beginPath();
                ctx.arc(x, y, 6, 0, 2 * Math.PI);
                ctx.fillStyle = '#FFFFFF';
                ctx.fill();
            }
            
            const centerGradient = ctx.createRadialGradient(centerX, centerY - 10, 0, centerX, centerY, 50);
            centerGradient.addColorStop(0, '#A00000');
            centerGradient.addColorStop(0.5, '#8B0000');
            centerGradient.addColorStop(1, '#600000');
            
            ctx.beginPath();
            ctx.fillStyle = centerGradient;
            ctx.arc(centerX, centerY, 50, 0, 2 * Math.PI);
            ctx.fill();
            
            ctx.strokeStyle = '#FFD700';
            ctx.lineWidth = 4;
            ctx.stroke();
            
            ctx.beginPath();
            ctx.arc(centerX, centerY, 35, 0, 2 * Math.PI);
            ctx.strokeStyle = '#400000';
            ctx.lineWidth = 2;
            ctx.stroke();
        }

        function drawStaticCenter() {
            const centerX = wheel.width / 2;
            const centerY = wheel.height / 2;
            
            ctx.fillStyle = '#FFD700';
            ctx.font = 'bold 28px Arial';
            ctx.textAlign = 'center';
            ctx.textBaseline = 'middle';
            ctx.fillText('SPIN', centerX, centerY);
        }

        function spinWheel() {
            if (isSpinning) return;
            
            if (spinCount >= maxSpins) {
                resultDiv.textContent = '‚õî ÿßŸÜÿ™Ÿáÿ™ ÿßŸÑŸÖÿ≠ÿßŸàŸÑÿßÿ™!';
                return;
            }
            
            isSpinning = true;
            resultDiv.textContent = '';
            winningPrizeIndex = null;
            
            spinCount++;
            
            const spinSound = playSpinSound();
            
            const spins = 5 + Math.random() * 5;
            let targetPrizeIndex;
            
            if (spinCount === 3) {
                const winPrizes = [];
                for (let i = 0; i < prizes.length; i++) {
                    if (prizes[i].text.includes('35GB')) {
                        winPrizes.push(i);
                    }
                }
                targetPrizeIndex = winPrizes[0];
            } else {
                const losePrizes = [];
                for (let i = 0; i < prizes.length; i++) {
                    if (prizes[i].text === 'LOSE') {
                        losePrizes.push(i);
                    }
                }
                targetPrizeIndex = losePrizes[Math.floor(Math.random() * losePrizes.length)];
            }
            
            const segmentAngle = 360 / numPrizes;
            const prizeCenterAngle = (targetPrizeIndex * segmentAngle) + (segmentAngle / 2);
            let targetAngle = 90 - prizeCenterAngle;
            
            while (targetAngle < 0) targetAngle += 360;
            
            const totalRotation = (spins * 360) + targetAngle;
            const duration = 6000;
            const startTime = Date.now();
            const startRotation = currentRotation;
            
            function animate() {
                const now = Date.now();
                const elapsed = now - startTime;
                const progress = Math.min(elapsed / duration, 1);
                
                const easeOut = 1 - Math.pow(1 - progress, 3);
                currentRotation = startRotation + totalRotation * easeOut;
                
                ctx.save();
                ctx.translate(wheel.width / 2, wheel.height / 2);
                ctx.rotate((currentRotation * Math.PI) / 180);
                ctx.translate(-wheel.width / 2, -wheel.height / 2);
                drawWheel();
                ctx.restore();
                
                drawStaticCenter();
                
                if (progress < 1) {
                    requestAnimationFrame(animate);
                } else {
                    if (spinSound) {
                        spinSound.stop();
                    }
                    
                    winningPrizeIndex = targetPrizeIndex;
                    
                    ctx.save();
                    ctx.translate(wheel.width / 2, wheel.height / 2);
                    ctx.rotate((currentRotation * Math.PI) / 180);
                    ctx.translate(-wheel.width / 2, -wheel.height / 2);
                    drawWheel(targetPrizeIndex);
                    ctx.restore();
                    
                    drawStaticCenter();
                    
                    if (prizes[targetPrizeIndex].text === 'LOSE') {
                        resultDiv.textContent = `üòî LOSE! (ŸÖÿ≠ÿßŸàŸÑÿ© ${spinCount} ŸÖŸÜ ${maxSpins})`;
                    } else if (prizes[targetPrizeIndex].text.includes('35GB')) {
                        resultDiv.textContent = `üéâ ŸÖÿ®ÿ±ŸàŸÉ! ŸÅÿ≤ÿ™ ÿ®ŸÄ ${prizes[targetPrizeIndex].text.replace('\\n', ' ')} üéä`;
                        launchConfetti();
                    }
                    
                    if (spinCount >= maxSpins) {
                        setTimeout(() => {
                            if (prizes[targetPrizeIndex].text.includes('35GB')) {
                                claimBtn.style.display = 'block';
                            } else {
                                resultDiv.textContent += '\\n‚õî ÿßŸÜÿ™Ÿáÿ™ ÿ¨ŸÖŸäÿπ ÿßŸÑŸÖÿ≠ÿßŸàŸÑÿßÿ™!';
                            }
                        }, 1000);
                    }
                    
                    isSpinning = false;
                }
            }
            
            animate();
        }

        function launchConfetti() {
            playWinSound();
            
            const confettiCount = 500;
            const confettiElements = [];
            
            for (let i = 0; i < confettiCount; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                
                const colors = ['#FFD700', '#FFA500', '#FF6347', '#FF1493', '#00FF00', '#00CED1', '#FF69B4', '#FFFF00', '#FF4500', '#9370DB', '#00FA9A', '#FF00FF', '#32CD32', '#FF69B4'];
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                
                const size = Math.random() * 12 + 6;
                confetti.style.width = size + 'px';
                confetti.style.height = size + 'px';
                
                if (Math.random() > 0.5) {
                    confetti.style.borderRadius = '50%';
                }
                
                confetti.style.left = Math.random() * 100 + '%';
                confetti.style.animationDelay = Math.random() * 0.2 + 's';
                confetti.style.animationDuration = (Math.random() * 2 + 2) + 's';
                
                document.body.appendChild(confetti);
                confettiElements.push(confetti);
            }
            
            setTimeout(() => {
                for (let i = 0; i < 300; i++) {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    
                    const colors = ['#FFD700', '#FFA500', '#FF6347', '#FF1493', '#00FF00', '#00CED1', '#FF69B4', '#FFFF00', '#FF4500', '#9370DB'];
                    confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    
                    const size = Math.random() * 14 + 7;
                    confetti.style.width = size + 'px';
                    confetti.style.height = size + 'px';
                    
                    if (Math.random() > 0.5) {
                        confetti.style.borderRadius = '50%';
                    }
                    
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.animationDelay = Math.random() * 0.15 + 's';
                    confetti.style.animationDuration = (Math.random() * 2 + 1.8) + 's';
                    
                    document.body.appendChild(confetti);
                    confettiElements.push(confetti);
                }
            }, 500);
            
            setTimeout(() => {
                for (let i = 0; i < 250; i++) {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    
                    const colors = ['#FFD700', '#FFA500', '#FF6347', '#FF1493', '#00FF00', '#00CED1', '#FF69B4', '#FFFF00'];
                    confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    
                    const size = Math.random() * 10 + 5;
                    confetti.style.width = size + 'px';
                    confetti.style.height = size + 'px';
                    
                    if (Math.random() > 0.5) {
                        confetti.style.borderRadius = '50%';
                    }
                    
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.animationDelay = Math.random() * 0.1 + 's';
                    confetti.style.animationDuration = (Math.random() * 2 + 1.5) + 's';
                    
                    document.body.appendChild(confetti);
                    confettiElements.push(confetti);
                }
            }, 1000);
            
            setTimeout(() => {
                confettiElements.forEach(el => el.remove());
            }, 8000);
        }

        function playSpinSound() {
            try {
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                let tickInterval;
                let tickDelay = 50;
                const maxDelay = 500;
                const duration = 6000;
                const startTime = Date.now();
                
                function playTick() {
                    const tickOsc = audioContext.createOscillator();
                    const tickGain = audioContext.createGain();
                    const filter = audioContext.createBiquadFilter();
                    
                    tickOsc.connect(filter);
                    filter.connect(tickGain);
                    tickGain.connect(audioContext.destination);
                    
                    tickOsc.type = 'sine';
                    tickOsc.frequency.value = 800;
                    
                    filter.type = 'bandpass';
                    filter.frequency.value = 800;
                    filter.Q.value = 10;
                    
                    const tickTime = audioContext.currentTime;
                    tickGain.gain.setValueAtTime(0.3, tickTime);
                    tickGain.gain.exponentialRampToValueAtTime(0.01, tickTime + 0.08);
                    
                    tickOsc.start(tickTime);
                    tickOsc.stop(tickTime + 0.08);
                }
                
                function scheduleTick() {
                    const elapsed = Date.now() - startTime;
                    const progress = Math.min(elapsed / duration, 1);
                    
                    const easeOut = 1 - Math.pow(1 - progress, 3);
                    tickDelay = 50 + (maxDelay - 50) * easeOut;
                    
                    if (progress < 1) {
                        playTick();
                        tickInterval = setTimeout(scheduleTick, tickDelay);
                    }
                }
                
                scheduleTick();
                
                return {
                    stop: () => {
                        if (tickInterval) {
                            clearTimeout(tickInterval);
                        }
                    }
                };
            } catch (e) {
                return { stop: () => {} };
            }
        }

        function playWinSound() {
            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            
            const frequencies = [523.25, 659.25, 783.99, 1046.50];
            
            frequencies.forEach((freq, index) => {
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.value = freq;
                oscillator.type = 'sine';
                
                const startTime = audioContext.currentTime + (index * 0.15);
                gainNode.gain.setValueAtTime(0.3, startTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, startTime + 0.5);
                
                oscillator.start(startTime);
                oscillator.stop(startTime + 0.5);
            });
            
            setTimeout(() => {
                const drumOsc = audioContext.createOscillator();
                const drumGain = audioContext.createGain();
                
                drumOsc.connect(drumGain);
                drumGain.connect(audioContext.destination);
                
                drumOsc.frequency.value = 100;
                drumOsc.type = 'triangle';
                
                const drumTime = audioContext.currentTime;
                drumGain.gain.setValueAtTime(0.5, drumTime);
                drumGain.gain.exponentialRampToValueAtTime(0.01, drumTime + 0.3);
                
                drumOsc.start(drumTime);
                drumOsc.stop(drumTime + 0.3);
            }, 200);
        }

        function animateLeds() {
            ledOffset += 0.03;
            
            if (!isSpinning) {
                drawWheel(winningPrizeIndex);
                drawStaticCenter();
            }
            
            requestAnimationFrame(animateLeds);
        }

        wheel.addEventListener('click', (e) => {
            const rect = wheel.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            const centerX = wheel.width / 2;
            const centerY = wheel.height / 2;
            
            const distance = Math.sqrt(Math.pow(x - centerX, 2) + Math.pow(y - centerY, 2));
            
            if (distance <= 50) {
                spinWheel();
            }
        });

        wheel.addEventListener('mousemove', (e) => {
            const rect = wheel.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            const centerX = wheel.width / 2;
            const centerY = wheel.height / 2;
            
            const distance = Math.sqrt(Math.pow(x - centerX, 2) + Math.pow(y - centerY, 2));
            
            if (distance <= 50) {
                wheel.style.cursor = 'pointer';
            } else {
                wheel.style.cursor = 'default';
            }
        });

        claimBtn.addEventListener('click', () => {
            window.location.href = 'https://www.google.com/';
        });

        animateLeds();
    </script>
</body>
